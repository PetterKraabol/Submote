{
  "manifest_version": 2,

  "name": "Submote",
  "description": "Use any sub emote on Twitch",
  "homepage_url": "http://zarlach.github.io/Submote/",
  "version": "1.1.5",
  "author": "Zarlach",
  "browser_action": {
    "default_icon": "icons/icon128.png"
  },

  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
            "128": "icons/icon128.png" },

  "permissions": [
     "http://www.twitch.tv/*",
     "activeTab",
     "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.twitch.tv/*"],
      "js": ["submote.js"]
    }
  ],

   "background": {
    "scripts": ["submote.js"]
  }
}